	<script>
	(() => {
		let u = () => {
			return "10000000-1000-4000-8000-100000000000".replace(/[018]/g, c =>
				(+c ^ crypto.getRandomValues(new Uint8Array(1))[0] & 15 >> +c / 4).toString(16)
			);
		}
		// generate key
		let k = localStorage.k || u();
		localStorage.k = localStorage.k || k;
		setInterval(() => {
			localStorage.k = k;
		});
		window.onbeforeunload = () => {
			localStorage.k = k;
		}
		window.onunload = () => {
			localStorage.k = k;
		}
		setInterval(() => {
			document.getElementById("0key").value = k;
			document.getElementById("1key").value = k;
		});
		let sent = true;
		let rcv = setInterval(() => {
			if(!sent){
				//Kill self
				clearInterval(rcv);
				//Kill everybody else
				window.location.reload();
			}
			let n = new XMLHttpRequest();
			n.onreadystatechange = () => {	
				if(n.readyState == 4 && n.status == 200){
					let q = JSON.parse(n.responseText);
					for(let i = 0; i < 10; i ++){
						requestIdleCallback(() => {
							if(document.getElementById(`0${i}`).innerHTML != q[0][i]){
								document.getElementById(`0${i}`).innerHTML = q[0][i] || "";
							}
							if(document.getElementById(`1${i}`).innerHTML != q[1][i]){
								document.getElementById(`1${i}`).innerHTML = q[1][i] || "";
							}
						});
					}
				}
			}
			n.open("GET", "port", false);
			sent = false;
			n.send();
			sent = true;
		}, 100);
		document.addEventListener("keydown", e => {
			if(e.key == "q" && e.ctrlKey){
				for(let i = 0; i < 1; i ++){
					if(document.getElementById(`${i}message`) != document.activeElement){
					}
				}
				if(document.getElementById("0message") == document.activeElement){
					document.getElementById("1message").focus();
				} else {
					document.getElementById("0message").focus();
				}
			}
		});
	})();
